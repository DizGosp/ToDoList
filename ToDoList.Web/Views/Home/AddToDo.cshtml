@model ToDoList.Model.Models.ToDo
@{
    ViewData["Title"] = "AddToDo";
    string error_mess = (string)TempData["error_mess"];
}

<div id="bigBox">

    <form asp-action="SaveToDo" name="myForm">
        <div style="margin-top:5%;">
            <label class="labelBox">TO DO Title: </label>
            <div>
                <input asp-for="Title" class="inputBox" style="border:none;" placeholder="Type the title" required />
            </div>
        </div>

        <div class="form-group">
            <label class="labelBox">TO DO Description: </label>
            <div>
                <input asp-for="Description" class="inputBox" placeholder="Type your description" required />
            </div>
        </div>

        <input type="submit" class="form-control btn btn-primary" style="width: 30%; background-color: #0db2f2 " value="Add TO DO" />
    </form>


    @if (error_mess != null)
    {
        <br />
        <div class="alert alert-danger">@error_mess</div>
    }


</div>
